{
  "name": "predic",
  "displayName": "Predic",
  "description": "Offline AI coding assistant with local LLMs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "predic.openModelManager",
        "title": "Predic Dashboard",
        "category": "Predic",
        "icon": "$(settings-gear)"
      },
      {
        "command": "predic.startServer",
        "title": "Start Server",
        "category": "Predic",
        "icon": "$(play)"
      },
      {
        "command": "predic.stopServer",
        "title": "Stop Server",
        "category": "Predic",
        "icon": "$(stop)"
      },
      {
        "command": "predic.restartServer",
        "title": "Restart Server",
        "category": "Predic",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "predic-sidebar",
          "title": "Predic",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "predic-sidebar": [
        {
          "type": "webview",
          "id": "predic.chatView",
          "name": "Chat",
          "icon": "$(comment-discussion)",
          "contextualTitle": "Predic Chat"
        }
      ]
    },
    "configuration": {
      "title": "Predic",
      "properties": {
        "predic.koboldCppPath": {
          "type": "string",
          "default": "",
          "description": "Path to the koboldcpp executable (e.g., koboldcpp.exe)"
        },
        "predic.modelDir": {
          "type": "string",
          "default": "",
          "description": "Directory containing your GGUF model files"
        },
        "predic.modelPath": {
          "type": "string",
          "default": "",
          "description": "Full path to the currently active model file"
        },
        "predic.port": {
          "type": "number",
          "default": 5001,
          "description": "Port to run the KoboldCpp server on"
        },
        "predic.gpuLayers": {
          "type": "number",
          "default": -1,
          "description": "Number of layers to offload to GPU (-1 for auto-detect)"
        },
        "predic.contextSize": {
          "type": "number",
          "default": 8192,
          "description": "Context size (tokens) for the model"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "predic.openModelManager",
          "when": "view == predic.chatView",
          "group": "navigation",
          "title": "Settings & Models"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.40",
    "axios": "^1.6.5"
  }
}